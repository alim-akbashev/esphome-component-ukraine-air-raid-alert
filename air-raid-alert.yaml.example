esphome:
  name: air-rair-alert-example

esp8266:
  board: esp12e

# Enable logging
logger:

# Enable Home Assistant API
api:
  password: !secret ha_api_password

ota:
  password: !secret ota_password

wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password

  # Enable fallback hotspot (captive portal) in case wifi connection fails
  ap:
    ssid: "Air-Rair-Alerts Fallback Hotspot"
    password: !secret wifi_fallback_password

captive_portal:

http_request:
  useragent: esphome/device
  timeout: 10s

light:
  - platform: rgb
    id: alert_indicator
    name: "Indicator"
    red: P15
    green: P12
    blue: P13

output:
  - platform: esp8266_pwm
    id: P15
    pin: GPIO15
  - platform: esp8266_pwm
    id: P12
    pin: GPIO12
  - platform: esp8266_pwm
    id: P13
    pin: GPIO13

binary_sensor:
- platform: air_raid_alert
  name: "Air Raid Alert Active"
  id: ods
  token: !secret air_raid_alert_api_token
  region_id: 18
  device_class: safety
  on_press:
    then:
      - light.turn_on:
          id: alert_indicator
          brightness: 50%
          red: 100%
          green: 0
          blue: 0
  on_release:
    then:
      - light.turn_on:
          id: alert_indicator
          brightness: 5%
          red: 0
          green: 0
          blue: 100%

external_components:
  - source: github://alim-akbashev/esphome-component-ukraine-air-raid-alert@main
    components: [ air_raid_alert ]
